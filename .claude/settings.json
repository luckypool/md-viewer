{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "language": "ja",
  "project": {
    "name": "md-viewer",
    "description": "Google Drive の Markdown ファイルをプレビューする Web アプリ",
    "type": "frontend",
    "framework": "react",
    "buildTool": "vite"
  },
  "codeStyle": {
    "indentation": "spaces",
    "indentSize": 2,
    "quotes": "single",
    "semicolons": false,
    "trailingComma": "es5"
  },
  "conventions": {
    "componentStyle": "functional",
    "stateManagement": "hooks",
    "testFramework": "vitest"
  }
}
